{{#each errors}}
<div class="alert alert-danger">{{text}}</div>
{{else}} {{/each}}

<div class="card card-body">
  <h3>Set the tracked Symbol and Rate</h3>
  <form action="/track" method="post">
    <div class="form-group">
      <label for="Symbol">Currency Symbol To Track</label>
      <input type="text" class="form-control" required name="textBoxSymbol" value={{textBoxSymbolDisplayValue}}>
    </div>
    <div class="form-group">
      <label for="Rate">Target Rate</label>
      <input type="text" class="form-control" required name="textBoxRate" value={{textBoxRateDisplayRate}}>
    </div>
    <button type="submit" class="btn btn-primary">Track</button>
  </form>
</div>

<br>

<div class="card">
  <h5 class="card-header">Current Tracking Request:</h5>
  <div class="card-body">
    <h5 class="card-title">Tracked currency symbol {{displaySymbol}} had a rate of {{displayRate}} at {{displayTrackingRequestSubmitTime}}.</h5>
    <h5 class="cart-title">An alert will be sent when {{displaySymbol}} reaches a value of {{displayTargetRate}}.</h5>
  </div>
</div>